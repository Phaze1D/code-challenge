{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "commonjs",
    "noUnusedLocals": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
        "*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}